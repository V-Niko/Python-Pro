# Exercise 4. Напишите функцию-генератор, которая будет возвращать
# простые числа. Верхняя граница этого диапазона должна быть задана
# параметром этой функции.


print("Exercise 1.")

def geo_progres(start, stop, step):
    while start < stop:
        command = yield start
        if command and command.lower() == 'stop':
            return None
        start *= step

z = geo_progres(1, 1000, 3)
for item in z:
    print(item, end= '; ')
    if item > 1000:
        z.send('stop')


print("\n\nExercise 2.")

def my_range(*args):
    if len(args) == 1:
        start, stop, step = 0, args[0], 1
    elif len(args) == 2:
        start, stop, step = args[0], args[1], 1
    elif len(args) == 3:
        start, stop, step = args[0], args[1], args[2]
    else:
        raise TypeError()
    if step >= 0 and start > stop:
        raise ValueError()

    while start < stop:
        yield start
        start += step

for i in range(10, 150, 17):
    #print(i)
    print(i, end= '; ')


print("\n\nExercise 3.")

x = (pow (i, 3) for i in range(2, 20))
print(sum(x), end= '; ')


print("\n\nExercise 4.")
def prime_digit(n):

    primes = [2]
    a = 2

    while a < n:

        counter = 0

        for i in primes:
            if a % i == 0:
                counter += 1

        if counter == 0:
            primes.append(a)
        else:
            counter = 0

        a = a + 1

    print(primes(5))

